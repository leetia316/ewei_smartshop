.inputitem {
   width: 100%;
   height: 76rpx;
   line-height: 76rpx;
    clear: both;
}

.inputitem .inputholder {
    width: 100%;
    height: 76rpx;
    line-height: 76rpx;
    display: inline-block;
    border-bottom: 1rpx solid #e6e6e6;
}

.inputholder .title{
    color: #333333;
    font-size: 26rpx;
    height: 76rpx;
    line-height: 76rpx; 
    display: inline-block;
    vertical-align: top;
    margin-left: 24rpx; 
}

.inputholder .input{
    font-size: 26rpx;
    color: #808080;
    display: inline-block;
    height: 76rpx;    
    line-height: 76rpx;
    float: right; 
    text-align: center;
}
