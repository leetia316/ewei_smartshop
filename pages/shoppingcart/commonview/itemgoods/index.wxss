  -ms-flex-pack: center;
  justify-content: center;
  flex: 1;
  width: 50px;
  /* background-color: #fa6400; */
}

.plusImgHolder .plusImg {
  width: 10px;
  height: 30px;
}

.numControl .numholder {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  flex: 1;
  /*子元素水平居中  */
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  /*  子元素垂直居中*/
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
