/*总布局  */

.itemholder {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
}

.itemholder .slideholder {
  position: relative;
  flex-direction: column;
  height: 210rpx;
   /* background-color: #009900;  */
}

/*横隔  */

.itemholder .lineStyle {
  margin-left: 39px;
  height: 1rpx;
  background-color: #E6E6E6; 
}

/*单个item布局  */

.itemholder .cartItemContent {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 210rpx;
  flex-wrap: wrap;
  position: relative;
  overflow: hidden;
  /*子元素垂直对齐  */
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

/* 是否选中的圆圈 */

.cartItemContent .circleholder {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  display: -ms-flexbox;
  width: 39px;
  align-self: center;
  /*子元素水平居中  */
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  /*  子元素垂直居中*/
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

/*圆圈  */

.circleholder .circle {
  width: 15px;
  height: 15px;
  padding-top: 20px;
  padding-bottom: 20px;
  padding-left: 3px;
  padding-right: 4px;
}

/*商品图片  */

.cartItemContent .cartItemImgWrap {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  width: 160rpx;
  height: 160rpx;
  justify-content: center;
  align-self: center;
}

/*图片  */
.cartItemImgWrap .cartItemImg {
  width: 160rpx;
  height: 160rpx;
  border-radius: 4rpx;
}

/*商品介绍容器  */
.cartItemContent .cartItemInfo {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  margin-left: 2%;
  align-content: space-between;
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  /*子元素占据剩余的空间  */
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
  width: 382rpx;
  height: 210rpx;
    /* background-color: #008899;   */
}

.cartItemInfo .cartItemTitle {
  color: #333;
  font-size: 14px;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  word-break: break-all;
  width: 320rpx;
  margin-top: 28rpx;
}

.cartItemInfo .cartItemDesc {
  color: #999;
  font-size: 22rpx;
  word-break: break-all;
  margin-top: 14rpx;
  width: 320rpx;
  /*显示两行文字多余的自动加。。。  */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.cartItemInfo .cartItemDescNone {
  margin-top: 14rpx;
  height: 20px;
}

.cartItemInfo .cartItemMoney {
  color: #fa6464;
  font-size: 28rpx;
  margin-top: 20rpx;
}

/*商品数量控制容器  */

.cartItemContent .numControl {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  height: 92%;
  width: 50px;
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
  flex-direction: column;
  /*子元素水平居中  */
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
  /*  */
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;

  /* background-color: #fa6464; */
}

