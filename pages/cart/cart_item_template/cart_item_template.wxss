/*上箭头*/
/*省略号*/
.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.cartItemWrap {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height: 210rpx;
  padding: 24rpx 0 0 24rpx;
  background-color: #fff;
  box-sizing: border-box;
}
.cartItemWrap .cartItemContent {
  display: flex;
  flex-direction: row;
  margin-left: 24rpx;
  width: 100%;
}
.cartItemWrap .cartItemContent .cartItemImgWrap {
  position: relative;
  margin-right: 28rpx;
  width: 160rpx;
  height: 160rpx;
}
.cartItemWrap .cartItemContent .cartItemImgWrap .cartItemImg {
  width: 160rpx;
  height: 160rpx;
}
.cartItemWrap .cartItemContent .cartItemImgWrap .outUse {
  display: none;
  position: absolute;
  left: 0;
  bottom: 0;
  height: 40rpx;
  line-height: 40rpx;
  width: 100%;
  background-color: #000;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
}
.cartItemWrap .cartItemContent .cartItemImgWrap .mask {
  display: none;
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: rgba(255, 255, 255, 0.8);
}
.cartItemWrap .cartItemContent .cartItemInfo {
  width: 390rpx;
}
.cartItemWrap .cartItemContent .cartItemInfo .cartItemTitle {
  font-size: 28rpx;
  line-height: 40rpx;
  color: #333333;
  margin-bottom: 14rpx;
}
.cartItemWrap .cartItemContent .cartItemInfo .cartItemDesc {
  font-size: 22rpx;
  line-height: 25rpx;
  color: #999999;
  margin-bottom: 30rpx;
}
.cartItemWrap .cartItemContent .cartItemInfo .cartItemMoney {
  font-size: 30rpx;
  line-height: 35rpx;
  color: #fa6464;
}
.cartItemWrap .cartItemContent .numControl {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.cartItemWrap .cartItemContent .numControl image {
  width: 20rpx;
  height: 20rpx;
  padding: 14rpx;
}
.cartItemWrap .cartItemContent .numControl image.plusImg {
  margin-top: -14rpx;
}
.cartItemWrap .cartItemContent .numControl .num {
  font-size: 22rpx;
  color: #454553;
}
