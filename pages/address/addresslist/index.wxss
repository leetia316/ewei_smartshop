/* index.wxss */

.holder {
  display: flex;
   display: -webkit-box;
  display: -webkit-flex;
  flex-direction: column;
  margin-bottom: 100px;
  background-color: #f6f6f6;
   -webkit-box-orient: vertical;
    -webkit-flex-direction: column;
    -ms-flex-direction: column;
}

.holder .emptyview{
  height: 50px;
}

.addbutton {
  position: fixed;
  bottom: 0rpx;
  background-color: #FF9C00;
  width: 100%;
  height: 50px; 
 
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  /* 子元素水平居中 */
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  -ms-flex-pack: center;
  justify-content: center;
  /*  子元素垂直居中*/
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

.addbutton .addtext {
  font-size: 18px;
  color: #ffffff;
  margin-left: 6px;
}

.addbutton .addicon {
  width: 15px;
  height: 15px;
}



@import '../commonview/itemaddress/index.wxss';