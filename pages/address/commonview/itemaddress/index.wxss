.addressholder {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  flex-direction: column;
   background-color: #fff; 
  width: 100%;
  margin-top: 14px; 
  /* margin-bottom: 10px; */
  -webkit-box-orient: vertical;
  -webkit-flex-direction: column;
  -ms-flex-direction: column;
}


.addressholder .headline {
  width: 100%;
  height: 2px;
}

.addressholder .userinfo {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  /* 子元素两端对齐 */
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  -ms-flex-pack: justify;
  justify-content: space-between;
  /* 子元素垂直居中 */
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
    padding-top: 14px; 
}

.userinfo .username {
  color: #2f3138;
  font-size: 16px;
  margin-left: 12px;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: 20px;
}

.userinfo .userphone {
  color: #2f3138;
  font-size: 16px;
  margin-right: 12px;
}

.addressholder .addressinfo {
  font-size: 15px;
  padding-top: 12px;
  padding-bottom: 12px;
  margin-left: 12px;
  padding-right: 12px;
   color: #333333;
}

.addressholder .editholder {
  height: 45px;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  /* 子元素垂直居中 */
  -webkit-box-align: center;
  -webkit-align-items: center;
  -ms-flex-align: center;
  align-items: center;
}

.editholder .emptyview {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  -ms-flex: 1;
  flex: 1;
}

.editholder .eidticon {
  width: 13px;
  height: 13px;
  margin-right: 6px;
}

.editholder .edittext {
  color: #999;
  font-size: 15px;
  margin-right: 12px;
}

.addressholder .linestyle {
  width: 100%;
  height: 1rpx;
  background-color: #e6e6e6;
  margin-top: 2px;
  margin-bottom: 2px;
}
